description "A cross-platform pseudo-terminal process implementation for U++\377";

uses
	Core;

library(WIN32 & !WIN10) "advapi32 user32";

options(WIN32 & !WIN10) -DAGENT_EXE=L\"PtyAgent.exe\";

options(WIN32 & !WIN10 & CLANG) -Wno-ignored-attributes;

file
	PtyProcess.h,
	PosixPty.cpp,
	Win32Pty.cpp,
	Library readonly separator,
	lib\libwinpty.h,
	lib\libwinpty.cpp,
	lib\LICENSE,
	Meta readonly separator,
	ReadMe.md,
	Copying,
	Docs readonly separator,
	src.tpp;

